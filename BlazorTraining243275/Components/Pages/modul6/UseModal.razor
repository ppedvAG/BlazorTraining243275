@page "/modal"

<button type="button" class="btn btn-primary" @onclick="show">
    Launch demo modal
</button>
<ModalPPEDV @ref="modal1" Titel="Hallo Welt" OnSave="SaveMethode">

    <div class="input-group mb-3">
        <input type="text" class="form-control"  @bind="Eingabe" >
     </div>

</ModalPPEDV>


@code {
    string Eingabe;
    ModalPPEDV modal1;
    void show()
    {
        modal1.Show();
    }
    void SaveMethode()
    {
        Eingabe = "";
        modal1.Show();
    }
}
